<%- include('partials/header') %>

<div class="register-card">
  <div class="card">
    <div class="card-body">
      <div class="center">
        <div class="position-circle">
          <span class="circle"></span>
        </div>
        <i class="fas fa-user-lock"></i>
        <h1 class="register-text">Login</h1>
      </div>
      <!-- Makes POST request to /register route -->
      <form action="/login" method="POST">
        <div class="form-group">
          <input type="email" class="form-control" name="username" placeholder="Email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-info btn-custom"><i class="fas fa-fingerprint"></i> Login</button>
      </form>
      <div class="">
        <a class="btn btn-dark btn-custom" href="/auth/github" role="button">
          <i class="fab fa-github"></i> Log In with Github
        </a>
      </div>
      <div class="" >
            <a class="btn btn-primary btn-custom" href="/auth/google" role="button">
              <i class="fab fa-google"></i> Log In with Google
            </a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
